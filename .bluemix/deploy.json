{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "region": {
            "description": "The IBM Cloud CF region",
            "type": "string"
        },
        "organization": {
            "description": "The IBM Cloud CF org",
            "type": "string"
        },
        "space": {
            "description": "The IBM Cloud CF space",
            "type": "string"
        },
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apiKeyDescription"
            },
            "type": "string"
        },
        "app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string"
        }
    },
    "required": [
        "region",
        "organization",
        "space",
        "app-name",
        "api-key"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apiKeyTitle"
            },
            "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": [
                "33%",
                "33%",
                "33%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "select",
                    "key": "region"
                },
                {
                    "type": "select",
                    "key": "organization"
                },
                {
                    "type": "select",
                    "key": "space",
                    "readonly": false
                }
            ]
        }
    ]
}
